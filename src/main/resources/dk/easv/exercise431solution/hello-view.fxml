<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="306.0" prefWidth="355.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.exercise431solution.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="Name:" />
   <TextField fx:id="txtName" />
   <Label fx:id="welcomeText1" layoutX="30.0" layoutY="30.0" text="Age:">
      <VBox.margin>
         <Insets top="15.0" />
      </VBox.margin>
   </Label>
   <TextField fx:id="txtAge" layoutX="30.0" layoutY="47.0" />
   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
         <Button fx:id="btnValidate" mnemonicParsing="false" onAction="#onBtnValidate" text="Validate" />
         <Button fx:id="btnReset" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onBtnReset" text="Reset">
            <HBox.margin>
               <Insets left="15.0" />
            </HBox.margin>
         </Button>
      </children>
      <VBox.margin>
         <Insets top="15.0" />
      </VBox.margin>
   </HBox>
   <Label fx:id="lblValidationText" text="ValidText" textFill="#169e4c" visible="false">
      <VBox.margin>
         <Insets top="20.0" />
      </VBox.margin>
   </Label>
   <Label text="History:">
      <font>
         <Font name="System Bold" size="13.0" />
      </font>
   </Label>
   <ListView fx:id="lstHistory" prefHeight="159.0" prefWidth="315.0" />
</VBox>
